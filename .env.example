# Environment Variables Example
# Copy this file to .env and update with your values

# =================================
# DATABASE CONFIGURATION
# =================================
DB_USER=forensics
DB_PASSWORD=your_secure_database_password_here
DB_NAME=forensics_simulator
DB_PORT=5432

# Full database URL (alternative to individual DB_* variables)
# DATABASE_URL=postgresql://forensics:password@localhost:5432/forensics_simulator?schema=public

# =================================
# BACKEND CONFIGURATION
# =================================
NODE_ENV=production
BACKEND_PORT=5000

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:80

# =================================
# FRONTEND CONFIGURATION
# =================================
FRONTEND_PORT=80
VITE_API_URL=http://localhost:5000/api

# =================================
# DOCKER CONFIGURATION
# =================================
COMPOSE_PROJECT_NAME=forensics-simulator

# =================================
# OPTIONAL: Email Configuration
# (for future features like password reset)
# =================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@forensics-simulator.com

# =================================
# OPTIONAL: File Upload Limits
# =================================
# MAX_FILE_SIZE_MB=500
# UPLOAD_PATH=/app/uploads

# =================================
# RATE LIMITING CONFIGURATION
# =================================
# Rate limit window in milliseconds (default: 15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window for general API endpoints (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Maximum authentication attempts per window (default: 5)
# Protects against brute force attacks on login/register
RATE_LIMIT_AUTH_MAX=5

# Maximum file uploads per window (default: 10)
RATE_LIMIT_UPLOAD_MAX=10

# =================================
# CORS & SECURITY CONFIGURATION
# =================================
# Multiple allowed origins (comma-separated)
# Format: ALLOWED_ORIGINS=http://localhost:80,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:80

# Alternative: Single CORS origin (ALLOWED_ORIGINS takes precedence)
# CORS_ORIGIN=http://localhost:80

# Allowed hosts for additional security
# ALLOWED_HOSTS=localhost,127.0.0.1

# =================================
# LOGGING
# =================================
# LOG_LEVEL=info
# LOG_FILE=/var/log/forensics/app.log
