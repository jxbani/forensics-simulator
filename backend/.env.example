# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/forensics_db"

# JWT Configuration
# IMPORTANT: Change this in production! Use a strong, random string (min 32 characters)
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Single frontend URL (for simple setup)
FRONTEND_URL=http://localhost:5173

# Multiple allowed origins (comma-separated, takes precedence over FRONTEND_URL)
# ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://yourdomain.com

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
# Rate limit window in milliseconds (default: 15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window for general API endpoints (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# Maximum authentication attempts per window (default: 5)
# Protects against brute force attacks on login/register
RATE_LIMIT_AUTH_MAX=5

# Maximum file uploads per window (default: 10)
RATE_LIMIT_UPLOAD_MAX=10

# ============================================================================
# OPTIONAL CONFIGURATIONS
# ============================================================================

# Email Configuration (for future features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@forensics-simulator.com
